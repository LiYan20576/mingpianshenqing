          animation-delay: -0.3s;
}
.loading view:nth-child(9) {
  -webkit-animation-delay: -0.1s;
          animation-delay: -0.1s;
}
@-webkit-keyframes loading {
0%,
  100% {
    -webkit-transform: scale(0);
            transform: scale(0);
}
50% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
@keyframes loading {
0%,
  100% {
    -webkit-transform: scale(0);
            transform: scale(0);
}
50% {
    -webkit-transform: scale(1);
            transform: scale(1);
}
}
