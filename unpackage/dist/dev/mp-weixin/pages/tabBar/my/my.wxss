.loading view {
  display: inline-block;
  width: 8px;
  height: 8px;
  background-color: black;
  margin: 0 3px;
  -webkit-animation: loading 1.7s infinite ease-in-out both;
          animation: loading 1.7s infinite ease-in-out both;
}
.loading view:nth-child(1) {
  -webkit-animation-delay: -1.7s;
          animation-delay: -1.7s;
}
.loading view:nth-child(2) {
  -webkit-animation-delay: -1.5s;
          animation-delay: -1.5s;
}
.loading view:nth-child(3) {
  -webkit-animation-delay: -1.3s;
          animation-delay: -1.3s;
}
.loading view:nth-child(4) {
  -webkit-animation-delay: -1.1s;
          animation-delay: -1.1s;
}
.loading view:nth-child(5) {
  -webkit-animation-delay: -0.9s;
          animation-delay: -0.9s;
}
.loading view:nth-child(6) {
