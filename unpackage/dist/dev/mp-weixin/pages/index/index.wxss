.holder {
  background-color: #000000;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 99999;
}
.wrapper {
  background-color: #000000;
}
.banner-wrapper {
  overflow: hidden;
  background-color: #000000;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
  transition: opacity 1s, scale 1s ease, -webkit-filter 1s;
  transition: opacity 1s, filter 1s, scale 1s ease;
  transition: opacity 1s, filter 1s, scale 1s ease, -webkit-filter 1s;
}
.banner-wrapper .banner {
  overflow: hidden;
  background-color: #000000;
  position: relative;
  width: 100%;
  height: 400px;
  transition: opacity 1s, scale 1s ease, -webkit-filter 1s;
  transition: opacity 1s, filter 1s, scale 1s ease;
  transition: opacity 1s, filter 1s, scale 1s ease, -webkit-filter 1s;
}
.banner-wrapper .banner .backgroundVideo {
  width: 100%;
  height: 400px;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.banner-wrapper .banner .logo {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 200px;
  height: auto;
}
.content {
  position: relative;
  z-index: 2;
}
.content .gapLine {
