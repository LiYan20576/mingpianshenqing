.wrapper {
  overflow: hidden;
}
.wrapper .phsy {
  font-size: 14px;
  line-height: 20px;
  color: rgba(94, 93, 93, 0.5);
  display: flex;
  align-items: center;
  font-family: InterVariableFont !important;
  font-weight: 500;
}
.wrapper .banner {
  width: 100%;
  height: 48px;
  box-sizing: border-box;
  padding-left: 20px;
  background-color: #282828;
  display: flex;
  align-items: center;
}
.wrapper .banner image {
  height: 24px;
  width: auto;
}
.wrapper .title {
  width: 100%;
  height: 48px;
  box-sizing: border-box;
  padding-left: 20px;
  background-color: #F7F7F7;
  display: flex;
  align-items: center;
  font-size: 16px;
  line-height: 22px;
  font-weight: 500;
  font-family: InterVariableFont !important;
  color: #5e5d5d;
}
.wrapper .card {
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
}
.wrapper .card .input-form {
  margin-bottom: 20px;
}
.wrapper .card .input-form .input-title {
  margin-left: 10px;
  margin-bottom: 6px;
  font-size: 13px;
  line-height: 18px;
  font-weight: 500;
  font-family: InterVariableFont !important;
  color: #5e5d5d;
}
.wrapper .card .input-form .input-wrapper {
  position: relative;
}
.wrapper .card .input-form .input-wrapper input {
  height: 42px;
  width: 100%;
  background: transparent !important;
  padding: 0 20px;
  box-sizing: border-box;
  border: 2px solid rgba(0, 0, 0, 0.1);
  border-radius: 6px;
  font-size: 16px;
  line-height: 22px;
  color: #5e5d5d;
  display: flex;
  align-items: center;
}
.wrapper .card .input-form .input-wrapper input:focus-within {
  border: 2px solid #5DB539 !important;
}
.wrapper .card .input-form .input-wrapper .icon-check {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  right: 20px;
  width: 22px;
  height: auto;
}
.wrapper .card .line-gap {
  width: 100%;
  margin: 40px auto;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.1);
}
.wrapper .card .submit {
  width: 100%;
  height: 42px;
  box-sizing: border-box;
  border-radius: 6px;
  border: 2px solid rgba(93, 181, 57, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 16px;
  line-height: 22px;
  background-color: rgba(93, 181, 57, 0.25);
}
.wrapper .card .active {
  background-color: #5db539 !important;
  border: 2px solid #5db539 !important;
}

